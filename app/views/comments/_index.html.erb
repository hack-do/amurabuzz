<div class="container-fluid">
   <div class="row-fluid" >
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-hover table-condensed table-bordered center">
				<% @comments.each do |comment|%>
					<tr>
						<td>
					    <%= profile_pic_tag comment.user.profile_picture.file.url, 'img-xs' %>
							<%= link_to comment.user.user_name,user_path(comment.user.id) %>
						</td>
						<td>
							<%= comment.content %>
						</td>
					</tr>
				<% end %>
      </table>
    </div>
   </div>
</div>

