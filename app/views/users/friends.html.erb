<%= link_to "Make friends",users_path,class: "btn btn-primary" %>
<br><br>
<div class = "user_wrapper">
	<div class="container-fluid border-shadow white_background">
		<h3>
			<%= 'Followers' if !@followers.nil? %>
			<%= 'Following' if !@following.nil? %>
		</h3>
		<div class="row">
			<table id="followers_table" class="table table-stripped col-md-4">
				<tr>
					<th>Sr.No.</th>
					<th>Email</th>
					<th>User Name</th>
				</tr>
				<% i = 0 %>
				
				<% @followers.each do |f| %>
					<tr>
						<td><%= i=i+1 %></td>
						<td><%= link_to f.email ,{:action => "friend_profile", :id => f.id}  %> </td>
						<td><%= f.user_name %></td>
						</td>
					</tr>
				<% end if @followers.present? %>

				<% @following.each do |f| %>
					<tr>
						<td><%= i=i+1 %></td>
						<td><%= link_to f.email ,{:action => "friend_profile", :id => f.id}  %> </td>
						<td><%= f.user_name %></td>
						<td><%= link_to "Unfollow",{:action => "unfollow",:unfollowed_id => f.id}, class: "btn btn-sm btn-warning"%></td>
						</td>
					</tr>
				<% end if @following.present? %>
			</table>
		</div>
	</div>
</div>