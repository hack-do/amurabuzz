		  	<%= render "public_activity/activity",:type_of_activity => @activities%>
		  </div>
		  	
		  <div class="tab-pane fade" id="my_act">
			<br><br>
		  	<%= render "public_activity/activity",:type_of_activity => @my_activities%>
		  </div>

		</div>
	</div>
</div>