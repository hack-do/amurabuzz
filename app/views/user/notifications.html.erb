
<br><br>
 
<div class="container-fluid">
	<div class="row">
	<!-- Nav tabs -->
		<ul id="activity_tabs" class="nav nav-pills" role="tablist">
		  <li class="active">
		  	<a href="#f_act" role="tab" data-toggle="tab">
		  		Friends Activities <span class="badge"><%= @activities.count %></span>
	  		</a>
  		 </li>
		  <li>
			  <a href="#my_act" role="tab" data-toggle="tab">
			  	My Activities <span class="badge"><%= @my_activities.count %></span>
			  </a>
		  </li>
		</ul>

		<!-- Tab panes -->
		<div class="tab-content">

		  <div class="tab-pane fade in active" id="f_act">
