<h2>Resend confirmation instructions</h2>

<div class="container">
	<div class="row">
		<div class="col-md-offset-4 col-md-4">

			<br><br><br><br>

			<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="form-group">
			  	<%= f.label :email, class: "col-sm-2 control-label" %><!-- <br /> -->
			  	<div class="col-sm-6">
			  		<%= f.email_field :email, autofocus: true, class: "form-control" %>
			  	</div>
		  	  </div>
			  <br>
			  <div><%= f.submit "Resend confirmation instructions",class: "btn btn-primary" %></div>
			<% end %>


			<br><br><br><br>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>