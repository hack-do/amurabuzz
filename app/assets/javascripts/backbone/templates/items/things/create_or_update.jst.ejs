<h3>Create Thing</h3>

<div class="container-fluid">
	<div class="row">
 		<form class="form-horizontal" role="form">
	        <div class="col-xs-6 col-xs-offset-3">
	        <div class="center text-danger backbone_errors"></div>
			  <div class="form-group">
			    <label class="col-xs-4 control-label" for="exampleInputEmail1">Name</label>
			    <div class="col-xs-8">
			    	<input type="text" class="form-control" id="thing_name_backbone" placeholder="eg. Table" value="<%= thing ? thing.name : '' %>">
		    	</div>
			  </div>
			  <div class="form-group">
			    <label class="col-xs-4 control-label" for="user_username_backbone">Category</label>
			    <div class="col-xs-8">
			    	<input type="text" class="form-control" id="thing_category_backbone" placeholder="eg. Furniture" value="<%= thing ? thing.category : '' %>">
		    	</div>
			  </div>
			  <br><br>
			   <div class="form-group">
			    <div class="col-sm-offset-6">
			      <button id="thing_create_update_button_backbone" type="submit" class="btn btn-lg btn-success">
			      	<%= type %>
			      </button>
			    </div>
			  </div>
			</div>
		</form>
	</div>
</div>
  