html {
  position: relative;
  min-height: 100%;
}
body {
  margin-top: 60px !important;
  /*margin-bottom: 60px;*/
}

.tweet_options .dropdown-toggle{
  padding: 0px 5px !important;
}
.img-xs{
  max-height: 20px;
  max-width: 20px;
}
.img-sm{
  max-height: 50px;
  max-width: 50px;
}
.img-md{
  max-height: 100px;
  max-width: 100px;
}

.img-lg{
  max-height: 200px;
  max-width: 200px;
}

.img-xl{
  max-height: 400px;
  max-width: 400px;
}

#main_body{
  margin-bottom:70px;
  position:relative; 
}

.likes_popover {
    white-space:pre-wrap;
}

#spinner{
  position: absolute;
  margin-left:500px;
  margin-top:-350px;
  z-index:-10;
}
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: rgba(245,245,245,0.5);
  text-align: center;
}

.notice_alert{
  margin-top:50px;
}

.notice, .alert{
  height:30px;
  padding:7px;
}

.grey{
  color:GREY;
}

.wrap_all{
  word-wrap:break-all;
}

.wrap_word{
   word-wrap:break-word;
}

.likes{
  opacity:0.7;
}
.tweet:hover .likes{
  opacity:1.0;
}

#user_notifications{
  width: 300px;
}

.border-shadow {
  border-radius: 5px;
  box-shadow: 1px 1px 20px 1px GREY;
}

.scrollable-menu {
    height: auto;
    max-height: 300px;
    overflow-x: hidden;
}

.black{
  color: BLACK;
}

.activity{
  margin-top:15px;
  border-bottom: 1px;
}

.noti-wrap {
  background-color: WHITE;
}
